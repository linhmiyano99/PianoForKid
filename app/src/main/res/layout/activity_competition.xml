<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_competition"
    tools:context=".view.activity.CompetitionActivity">

    <RelativeLayout
        android:id="@+id/frame_layout"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#D00AF1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/text_view_1"
            style="@style/text_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/system_score"
            android:textColor="#040304" />

        <ImageView
            android:id="@+id/image_view_note_2"
            android:padding="5dp"
            android:layout_below="@id/text_view_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/todo"
            android:scaleType="fitXY"
            android:src="@drawable/bg_text_diem" />
        <TextView
            android:id="@+id/txt_system_score"
            android:layout_margin="5dp"
            style="@style/text_button"
            android:layout_below="@id/text_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/system_score"
            android:textColor="#FF9800" />
        <TextView
            android:id="@+id/text_view_2"
            android:layout_below="@id/image_view_note_2"
            android:layout_marginTop="@dimen/margin_top_button"
            style="@style/text_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/your_score"
            android:textColor="#040304" />

        <ImageView
            android:id="@+id/image_view_note"
            android:padding="5dp"
            android:layout_below="@+id/text_view_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/todo"
            android:scaleType="fitXY"
            android:src="@drawable/bg_text_diem" />

        <TextView
            android:id="@+id/txt_user_score"
            android:layout_margin="5dp"
            android:layout_below="@+id/text_view_2"
            style="@style/text_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/your_score"
            android:textColor="#FFC107" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@null"
        android:clickable="true"
        android:contentDescription="@string/todo"
        android:focusable="true"
        android:padding="3dp"
        android:src="@drawable/ic_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnC1"
        style="@style/button_kb_seven_style"
        android:background="@drawable/kb_c_new"
        android:text="@string/c1"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnD1"
        app:layout_constraintEnd_toStartOf="@+id/btnD1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/frame_layout" />

    <Button
        android:id="@+id/btnD1"
        style="@style/button_kb_seven_style"
        android:layout_toEndOf="@+id/btnC1"
        android:background="@drawable/kb_d_new"
        android:text="@string/d1"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnE1"
        app:layout_constraintEnd_toStartOf="@+id/btnE1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnC1" />

    <Button
        android:id="@+id/btnE1"
        style="@style/button_kb_seven_style"
        android:layout_toEndOf="@+id/btnD1"
        android:background="@drawable/kb_e_new"
        android:text="@string/e1"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnF1"
        app:layout_constraintEnd_toStartOf="@+id/btnF1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnD1" />

    <Button
        android:id="@+id/btnF1"
        style="@style/button_kb_seven_style"
        android:layout_toEndOf="@+id/btnE1"
        android:background="@drawable/kb_f_new"
        android:text="@string/f1"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnG1"
        app:layout_constraintEnd_toStartOf="@+id/btnG1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnE1" />

    <Button
        android:id="@+id/btnG1"
        style="@style/button_kb_seven_style"
        android:layout_toEndOf="@+id/btnF1"
        android:background="@drawable/kb_g_new"
        android:text="@string/g1"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnA1"
        app:layout_constraintEnd_toStartOf="@+id/btnA1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnF1" />

    <Button
        android:id="@+id/btnA1"
        style="@style/button_kb_seven_style"
        android:layout_toEndOf="@+id/btnG1"
        android:background="@drawable/kb_a_new"
        android:text="@string/a1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnB1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnG1" />

    <Button
        android:id="@+id/btnB1"
        style="@style/button_kb_seven_style"
        android:layout_toEndOf="@+id/btnA1"
        android:background="@drawable/kb_b_new"
        android:text="@string/b1"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnA1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnA1" />



    <ImageView
        android:id="@+id/imageView1"
        style="@style/star_style"
        android:layout_marginStart="@dimen/margin_top_button"
        android:baselineAlignBottom="true"
        android:contentDescription="@string/todo"
        app:layout_constraintBaseline_toBaselineOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/frame_layout"
        app:srcCompat="@drawable/star_c1" />

    <ImageView
        android:id="@+id/imageView2"
        style="@style/star_style"
        android:layout_marginStart="@dimen/margin_top_button"
        android:baselineAlignBottom="true"
        android:contentDescription="@string/todo"
        app:layout_constraintBaseline_toBaselineOf="@+id/imageView3"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView1"
        app:srcCompat="@drawable/star_d1" />

    <ImageView
        android:id="@+id/imageView3"
        style="@style/star_style"
        android:layout_marginStart="@dimen/margin_top_button"
        android:baselineAlignBottom="true"
        android:contentDescription="@string/todo"
        app:layout_constraintBaseline_toBaselineOf="@+id/imageView4"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:srcCompat="@drawable/star_e1" />

    <ImageView
        android:id="@+id/imageView4"
        style="@style/star_style"
        android:layout_marginStart="@dimen/margin_top_button"
        android:baselineAlignBottom="true"
        android:contentDescription="@string/todo"
        app:layout_constraintBaseline_toBaselineOf="@+id/imageView5"
        app:layout_constraintEnd_toStartOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:srcCompat="@drawable/star_f1" />

    <ImageView
        android:id="@+id/imageView5"
        style="@style/star_style"
        android:layout_marginStart="@dimen/margin_top_button"
        android:baselineAlignBottom="true"
        android:contentDescription="@string/todo"
        app:layout_constraintBaseline_toBaselineOf="@+id/imageView6"
        app:layout_constraintEnd_toStartOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:srcCompat="@drawable/star_g1" />

    <ImageView
        android:id="@+id/imageView6"
        style="@style/star_style"
        android:layout_marginStart="@dimen/margin_top_button"
        android:baselineAlignBottom="true"
        android:contentDescription="@string/todo"
        app:layout_constraintBaseline_toBaselineOf="@+id/imageView7"
        app:layout_constraintEnd_toStartOf="@+id/imageView7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:srcCompat="@drawable/star_a1" />

    <ImageView
        android:id="@+id/imageView7"
        style="@style/star_style"
        android:layout_marginStart="@dimen/margin_top_button"
        android:layout_marginEnd="@dimen/margin_top_button"
        android:layout_marginBottom="@dimen/margin_button"
        android:baselineAlignBottom="true"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/star_b1" />
</androidx.constraintlayout.widget.ConstraintLayout>