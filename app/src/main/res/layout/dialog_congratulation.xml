<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/custom_dialog_congratulation"
    android:layout_gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp">
    <RelativeLayout
        android:layout_margin="3dp"
        android:background="@drawable/ic_congratulation"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout_dialog"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <LinearLayout
            android:layout_margin="2dp"
            android:background="#94FBFBFB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_star2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/star" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_star1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/star" />

                <ImageView
                    android:id="@+id/image_star3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="70dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/star_null" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/relativeLayout_dialog"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_replay"
            android:elevation="10dp"
            android:layout_width="230dp"
            android:layout_height="50dp">
            <RelativeLayout
                android:background="@drawable/custom_dialog_list_song"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_replay"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="#F0C1F8"
                    android:contentDescription="@string/todo"
                    android:padding="5dp"
                    android:src="@drawable/ic_replay"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="20dp"
                    android:contentDescription="@string/todo"
                    android:fontFamily="@font/rammetto_one"
                    android:padding="5dp"
                    android:text="@string/replay"
                    android:textColor="#9C27B0"
                    android:textSize="@dimen/button_text_size"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_cancel"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="230dp"
            android:layout_height="50dp">
            <RelativeLayout
                android:background="@drawable/custom_dialog_list_song"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_cancel"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="#BEF44336"
                    android:contentDescription="@string/todo"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_cancel" />

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:contentDescription="@string/todo"
                    android:fontFamily="@font/rammetto_one"
                    android:text="@string/cancel"
                    android:textColor="#F44336"
                    android:textSize="@dimen/button_text_size"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <TextView
        android:background="#B0FAC355"
        android:layout_margin="5dp"
        android:fontFamily="@font/rammetto_one"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textColor="#F4365C"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        android:text="@string/congratulation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>