<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@null"
        android:clickable="true"
        android:contentDescription="@string/todo"
        android:elevation="10dp"
        android:focusable="true"
        android:src="@drawable/ic_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <RelativeLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animationCache="true"
        android:background="@drawable/bg_frame_setting"
        android:layout_marginTop="@dimen/margin_title"
        android:layout_marginBottom="@dimen/margin_title"
        android:layout_marginStart="@dimen/margin_title"
        android:layout_marginEnd="@dimen/margin_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/text_view_setting"
        android:layout_marginTop="@dimen/margin_top_button"
        android:textStyle="bold"
        android:textSize="@dimen/num_text_size"
        android:gravity="center"
        android:textColor="#673AB7"
        android:text="@string/setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginEnd="@dimen/margin_button"
            android:layout_marginStart="@dimen/margin_button"
            android:layout_below="@id/text_view_setting"
            android:background="#9C27B0"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>

    <TextView
        android:id="@+id/text_view_language"
        android:layout_below="@+id/text_view_setting"
        android:text="@string/language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_view_setting" />
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_language"
            android:layout_marginStart="@dimen/margin_top_button"
            android:layout_marginTop="@dimen/margin_title"
            android:layout_below="@+id/text_view_setting"
            android:layout_toEndOf="@+id/text_view_language"
            app:cardCornerRadius="40dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:layout_width="200dp"
            android:layout_height="40dp">
            <TextView
                android:gravity="center"
                android:background="@drawable/shape_background"
                android:textColor="#F8F6F6"
                android:textStyle="bold"
                android:textSize="@dimen/text_size"
                android:text="@string/english"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/ic_baseline_arrow_drop_down_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
        <!--
        <TextView
            android:id="@+id/text_view_sound"
            android:layout_below="@+id/text_view_language"
            style="@style/text_view_setting"
            android:text="@string/sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/button_sound"
            android:layout_marginStart="@dimen/margin_top_button"
            android:layout_marginTop="@dimen/margin_top_button"
            android:layout_below="@id/card_view_language"
            android:layout_toEndOf="@+id/text_view_sound"
            android:background="@drawable/sound_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>-->
        <TextView
            android:id="@+id/text_view_background_music"
            style="@style/text_view_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_language"
            android:layout_alignParentStart="true"
            android:text="@string/background_music" />
        <ImageButton
            android:id="@+id/button_music"
            android:layout_marginStart="@dimen/margin_top_button"
            android:layout_marginTop="@dimen/margin_top_button"
            android:layout_below="@id/card_view_language"
            android:layout_toEndOf="@+id/text_view_background_music"
            android:background="@drawable/background_music_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>