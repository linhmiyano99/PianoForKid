<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/bg_dialog"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="300dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:contentDescription="@string/todo"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_dialog_list_song" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_listen"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_dialog_list_song">

                <ImageView
                    android:id="@+id/imageListen"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="#E91E63"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/audio" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/todo"
                    android:fontFamily="@font/rammetto_one"
                    android:padding="5dp"
                    android:text="@string/listen"
                    android:textColor="#E91E63"
                    android:textSize="@dimen/button_text_size"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_play"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true">

            <RelativeLayout
                android:id="@+id/rlPlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_dialog_list_song">

                <ImageView
                    android:id="@+id/imagePlay"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="#F44336"
                    android:contentDescription="@string/todo"
                    android:padding="5dp"
                    android:src="@drawable/play" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/todo"
                    android:fontFamily="@font/rammetto_one"
                    android:text="@string/play"
                    android:textColor="#F44336"
                    android:textSize="@dimen/button_text_size"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <ImageButton
        android:layout_marginBottom="5dp"
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back"
        android:contentDescription="@string/todo"/>
</LinearLayout>