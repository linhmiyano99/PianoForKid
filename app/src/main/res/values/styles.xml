<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="button_style">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="small_button_style">
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="text_button">
        <item name="android:textColor">#FFFCFC</item>
        <item name="android:fontFamily">@font/rammetto_one</item>
        <item name="android:padding">@dimen/padding_title</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="image_button_style">
        <item name="android:background">@null</item>
        <item name="android:baselineAlignBottom">true</item>
        <item name="android:contentDescription">@string/todo</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="button_kb_style">
        <item name="android:gravity">bottom|center</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#111111</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">150dp</item>
    </style>
    <style name="button_kb_seven_style">
        <item name="android:gravity">bottom|center</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#111111</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="star_style">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="black_piano_key_style">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/black_piano_key_selector</item>
        <item name="android:layout_marginLeft">-20dp</item>
    </style>

    <style name="button_dialog">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:contentDescription">@string/todo</item>
        <item name="android:padding">3dp</item>
    </style>
    <style name="star_style_relative">
        <item name="android:background">@null</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="FirebaseLoginTheme" parent="FirebaseUI">
        <item name="android:screenOrientation">landscape</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="text_view_setting">
        <item name="android:layout_marginTop">@dimen/margin_title</item>
        <item name="android:layout_marginStart">@dimen/margin_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#673AB7</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>
</resources>