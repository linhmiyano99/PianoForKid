<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.pianoforkid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup">
        <activity android:name=".view.activity.LessonActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".view.activity.CompetitionActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.activity.DetailLessonListActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.activity.AllListActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.activity.LeaderBoardActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.activity.LoginActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.activity.UserActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.activity.MainMenuActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.activity.SplashScreenActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.InstructionActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.activity.PlayMusicWithInstructionActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.activity.SongListActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.activity.SaveMusicActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.activity.SettingActivity"
            android:screenOrientation="landscape" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"
            tools:replace="android:value" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider954490725034037"
            android:exported="false" />
    </application>

</manifest>